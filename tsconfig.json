{
  "compilerOptions": {
    /** Language and Environment */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "target": "ES2022",

    /** Type Checking */
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    /** Modules */
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "@shadow-library/errors": ["packages/errors"],
      "@shadow-library/errors/*": ["packages/errors/src/*"],
      "@shadow-library/types": ["packages/types"],
      "@shadow-library/types/*": ["packages/types/src/*"],
      "@shadow-library/common": ["packages/common"],
      "@shadow-library/common/*": ["packages/common/src/*"],
      "@shadow-library/database": ["packages/database"],
      "@shadow-library/database/*": ["packages/database/src/*"]
    },
    "resolveJsonModule": true,

    /** Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /** Completeness */
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts"]
}
