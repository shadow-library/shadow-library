{
  "compilerOptions": {
    /** Language and Environment */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "target": "ES2022",

    /** Type Checking */
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    /** Modules */
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@shadow-library/app": ["packages/app/src/index.ts"],
      "@shadow-library/app/*": ["packages/app/src/*"],
      "@shadow-library/common": ["packages/common/src/index.ts"],
      "@shadow-library/common/*": ["packages/common/src/*"],
      "@shadow-library/server": ["packages/server/src/index.ts"],
      "@shadow-library/server/*": ["packages/server/src/*"]
    },
    "resolveJsonModule": true,

    /** Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /** Completeness */
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts", "scripts/**/*.ts"]
}
