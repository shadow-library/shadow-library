{
  "$id": "urn:shadow-library:schema:formats",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Data Validation Format schema",
  "type": "object",
  "minProperties": 1,
  "patternProperties": {
    "^[a-zA-Z0-9-]{3,32}$": {
      "type": "object",
      "description": "A format that can be used to validate the data",
      "required": ["description", "pattern"],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "description": "A description of the format"
        },
        "pattern": {
          "type": "string",
          "description": "The regular expression pattern to validate the data",
          "format": "regex"
        }
      }
    }
  }
}
