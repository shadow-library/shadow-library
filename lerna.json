{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "message": "chore: publish %s release",
      "conventionalCommits": true,
      "createRelease": "github",
      "npmClient": "pnpm"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "directory": "{workspaceRoot}/dist/{projectRoot}",
      "npmClient": "pnpm"
    }
  }
}
